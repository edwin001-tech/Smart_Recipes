<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.tdbsoftrecipesappv1.smartrecipe">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="com.android.vending.BILLING" />


    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.SmartRecipe">
        <activity
            android:name="com.tdbsoftrecipesappv1.smartrecipe.MainActivity"
            android:label="@string/app_name"
            android:theme="@style/Theme.SmartRecipe.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.tdbsoftrecipesappv1.smartrecipe.ui.subscription.SubscriptionActivity"
            android:label="@string/subscription"
            android:theme="@style/Theme.SmartRecipe"/>
        <activity android:name="com.tdbsoftrecipesappv1.smartrecipe.RecipeListActivity"
            android:theme="@style/Theme.SmartRecipe.NoActionBar"/>
        <activity android:name="com.tdbsoftrecipesappv1.smartrecipe.RecipeActivity"
            android:theme="@style/Theme.SmartRecipe.NoActionBar"/>
        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>